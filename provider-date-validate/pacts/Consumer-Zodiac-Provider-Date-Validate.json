{
  "provider": {
    "name": "Provider-Date-Validate"
  },
  "consumer": {
    "name": "Consumer-Zodiac"
  },
  "interactions": [
    {
      "description": "validate the invalid date",
      "request": {
        "method": "GET",
        "path": "/date-validate",
        "query": {
          "Date": [
            "1000-34-45"
          ]
        },
        "matchingRules": {
          "query": {
            "Date": {
              "matchers": [
                {
                  "match": "date",
                  "date": "1000-34-45"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "Date": {
              "type": "Date",
              "format": "1000-34-45",
              "expression": "null"
            }
          }
        }
      },
      "response": {
        "status": 400,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "month": 34,
          "year": 1000,
          "isValidDate": false,
          "day": 45
        },
        "matchingRules": {
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "Invalid date from provider"
        }
      ]
    },
    {
      "description": "validate the correct date",
      "request": {
        "method": "GET",
        "path": "/date-validate",
        "query": {
          "Date": [
            "1994-04-25"
          ]
        },
        "matchingRules": {
          "query": {
            "Date": {
              "matchers": [
                {
                  "match": "date",
                  "date": "1994-04-25"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "Date": {
              "type": "Date",
              "format": "1994-04-25"
            }
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "month": 4,
          "year": 1994,
          "isValidDate": true,
          "day": 25
        },
        "matchingRules": {
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "valid date from provider"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.0.10"
    }
  }
}